{% extends 'AppBundle:user:layout.html.twig' %}

{% block body %}
    <h1>Organisations - {{ organisation.CompanyName }}</h1>
    <hr>
    <table>
        <tr>
           <td>
               Статус
           </td>
            <td>{{ organisation.CompanyStatus }}</td>
        </tr>
        <tr>
            <td>
                ЄДРПОУ
            </td>
            <td>{{ organisation.EDRPOU }}</td>
        </tr>
        <tr>
            <td>
                Email
            </td>
            <td>{{ organisation.email }}</td>
        </tr>
        <tr>
            <td>
                Телефон
            </td>
            <td>{{ organisation.Phone }}</td>
        </tr>
        <tr>
            <td>
                Вид діяльності
            </td>
            <td>{{ organisation.activityID }}</td>
        </tr>
        <tr>
            <td>
                Сайт
            </td>
            <td>{{ organisation.WebPage }}</td>
        </tr>
    </table>
    <a href="{{ path('user_organisations_edit') }}">Edit</a>


{% endblock %}

{% block title %}
    Organic Standard - Organisations
{% endblock %}