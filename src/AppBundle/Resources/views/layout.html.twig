<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Lineage 2 Seresin">
    <link rel="icon" href="{{ asset('/bundles/app/favicon/l2.jpg') }}">

    <title>Seresin</title>

    <link href="{{ asset('/bundles/app/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('/bundles/app/css/style.css') }}" rel="stylesheet">
  </head>

  <body>
    <div class="background-container">
      <div class="menu">
        <a href="#"><button class="menu-item {% if app.request.attributes.get('_route') starts with 'news' %} active {% endif %}">News</button></a>
        <a href="{{ path('user_login') }}"><button class="menu-item">Account</button></a>
        <a href="{{ path('downloads') }}"><button class="menu-item">Download</button></a>
        <a href="{{ path('about') }}"><button class="menu-item">About</button></a>          
        <a href="#"><button class="menu-item">Forum</button></a>
      </div>
    
    <div class="container">
      <div>
        {% for flash_message in app.session.flashBag.get('success') %}
          <div class="alert alert-success">
            {{ flash_message }}
          </div>
        {% endfor %}
      </div>

      <div class="content">
        {% block body %}{% endblock %}
      </div>
    </div>
    <div class="footer"></div>
  </div>

  <script src="{{ asset('/bundles/app/js/jquery.min.js') }}"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.13.0/esm/popper-utils.js"></script>

</body>
</html>