
{% extends 'AppBundle::index.html.twig' %}

{% block body %}
    <h2>Login</h2>
    <hr/>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {#{% if is_granted('ROLE_ADMIN') %}#}
    {#{% else %} {{ path('admin_default') }} {% endif %}#}
    {#{{ path('redirect') }}#}
    <form action="" method="post">
        <label for="username">Username:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" />

        <input type="hidden" name="_target_path" value="/" />

        <button type="submit">Login</button>
        <a href="{{ path('forgot_password') }}"><button>Forgot password</button></a>

        <div class="g-recaptcha" data-sitekey="6LfmakQUAAAAAHNwlmQYbMB6NVDFA0I_nnFgqMyk"></div>
    </form>


{% endblock %}
